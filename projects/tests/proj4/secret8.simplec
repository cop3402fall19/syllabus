int power(int b, int p)
{
	int x;
	int result;
	x = 1;
	result = 0;
	
	if (p < 1) 
	{
		result = 1;
	}
	
	while (p > 1)
	{
		x = (x * b);
		p = (p - 1);
		result = x;
	}
	return result;
}

int digitcount(int param)
{
	int result;
	result = 0;
	
	if (param < 0)
	{
		result = digitcount(param - 1);
	} 
	else if ((param > 0) && (param < 10))
	{
		result = 1;
	}
	else 
	{
		result = digitcount(param/10);
	}
	return result;
}

int palindrome(int pal)
{
	int num1;
	int num2;
	int result;
	result = 0;
	
	if (pal == 0)
	{
		print false;
		result = 0;
	}
	
	if (digitcount(pal) == 1)
	{
		print true;
		result = 1;
	} 
	else if (digitcount(pal) == 2)
	{
		pal = pal % 10;
		result = pal / 10;
	} 
	else 
	{
		num1 = pal / power(10, digitcount(pal));
		num2 = pal % 10;
	}
	
	if ((num1 > num2) || (num1 < num2))
	{
		print false;
		result = 0;
	} 
	else 
	{
		pal = (pal - (num1 * (power(10, digitcount(pal))))/ 10);
		result = palindrome(pal);
	}
	
	return result;
}

